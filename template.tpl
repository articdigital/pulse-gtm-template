const log = require('logToConsole');
const setInWindow = require('setInWindow');

if(!data.propertyId) {
  data.gtmOnFailure('Missing property ID');
}


const getPulse = () => {
  // Return the existing 'pulse' global method if available
  let pulse = copyFromWindow('pulse');

  if (pulse) {
    return pulse;
  }
  
  var Pulse = {
    tid: data.propertyId,
    q: []
  };
  
  Pulse.init = function(tid) { 
    Pulse.tid = tid;
  };
  
  Pulse.track = function() {
    Pulse.q.push(arguments);
  };
  
  Pulse.toString = function() {
    return Pulse.tid;
  };
  
  // Initialize the 'pulse' obj
  setInWindow('pulse', Pulse);
  
  // Return the global 'pulse' obj, created above
  return Pulse;
};


// Get reference to the global method
